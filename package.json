{
  "name": "retailstore",
  "version": "1.0.4",
  "description": "Retail Store Management Application - Manage your store and shop with ease! This app lets you browse products, track orders, and handle inventoryâ€”all in one place.",
  "main": "./out/main/index.js",
  "author": "Muhammad Ahmad Saleem",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "repository": "https://github.com/MAhmadS332/RetailStoreAppElectron",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@reduxjs/toolkit": "^2.5.1",
    "arabic-persian-reshaper": "^1.0.1",
    "arabic-reshaper": "^1.1.0",
    "better-sqlite3": "^11.4.0",
    "bidi-js": "^1.0.3",
    "electron-updater": "^6.6.2",
    "framer-motion": "^11.18.2",
    "fs-extra": "^11.3.0",
    "jspdf": "^3.0.1",
    "pdfkit": "^0.17.1",
    "react-hot-toast": "^2.4.1",
    "react-redux": "^9.2.0",
    "react-resizable-panels": "^2.1.7",
    "react-router-dom": "^6.27.0",
    "react-spreadsheet": "^0.9.5",
    "react-to-print": "^3.0.6",
    "receipt": "^1.4.0",
    "scheduler": "^0.25.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config": "^1.0.2",
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.3",
    "postcss": "^8.4.47",
    "prettier": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.14",
    "vite": "^5.3.1"
  },
  "build": {
    "appId": "com.retailstoreapp",
    "productName": "Retail Store App",
    "win": {
      "target": "nsis",
      "icon": "resources/assets/imgs/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "license": "license.txt"
    },
    "linux": {
      "icon": "resources/assets/imgs/icon.png"
    },
    "mac": {
      "icon": "resources/assets/imgs/icon.icns"
    }
  }
}
